    <div class="block block-bordered-lg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center m-b-lg">
            <!-- <img class="img-circle" src="/images/nqis-shield.svg" width="150px" height="150px"> -->
